<Window x:Class="CamInspector.Subpage.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CamInspector.Subpage"
        mc:Ignorable="d"
        Closing="WindowClosing"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="登入" Height="400" Width="300" Background="#FF3E6FB3" Icon="/Icon/Account/Account.png">
    <Grid>
        <WrapPanel Orientation ="Horizontal" Margin="20,64,21,160">
            <Image HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="38" Source="/Icon/Account/user.png" Margin="45,26,0,0"/>
            <TextBox x:Name="Account" Style="{StaticResource BaseTextBox}" Tag="請輸入帳號" Width="120" Margin="0,26,0,0"/>
            <Image HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="38" Source="/Icon/Account/padlock.png" Margin="45,26,0,0"/>
            <Grid Margin="0,26,0,0">
                <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1">
                    <Grid>
                        <TextBlock x:Name="Password_Watermark" Text="請輸入密碼" Foreground="Green" VerticalAlignment="Center" Padding="5" Margin="0,0,0,0" IsHitTestVisible="False" Visibility="Visible"/>
                        <PasswordBox x:Name="Password" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Padding="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            PasswordChanged="Password_PasswordChanged" GotFocus="Password_GotFocus" LostFocus="Password_LostFocus" Width="120" Height="40"/>
                        <TextBox x:Name="PasswordText" Style="{StaticResource BaseTextBox}" VerticalAlignment="Top" Width="120" Height="40" Margin="0,0,0,0" IsReadOnly="True" Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <Button x:Name="PasswordEye" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Width="30" Height="30" Click="Main_Btn_Click">
                    <Image Source="/Icon/Account/eye.png" Width="20" Height="20"/>
                </Button>
            </Grid>
        </WrapPanel>
        <Button x:Name="Log_In" Style="{StaticResource CircleButton}" Margin="103,224,103,66" Content="登入" FontSize="18" Click="Main_Btn_Click"/>
    </Grid>
</Window>
