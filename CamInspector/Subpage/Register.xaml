<Window x:Class="CamInspector.Subpage.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CamInspector.Subpage"
        mc:Ignorable="d"
        Closing="WindowClosing"
        ResizeMode="CanMinimize"
         WindowStartupLocation="CenterScreen"
        Title="Register" Height="400" Width="300" Background="#FF3E6FB3" Icon="/Icon/Account/AccountGroup.png">
    <Grid>
        <WrapPanel Orientation ="Horizontal" Margin="22,32,30,136">
            <Image HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="38" Source="/Icon/Account/user.png" Margin="45,26,0,0"/>
            <TextBox x:Name="Account" Style="{StaticResource BaseTextBox}" Tag="請輸入帳號" Width="120" Margin="0,26,0,0"/>
            <Image HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="38" Source="/Icon/Account/padlock.png" Margin="45,26,0,0"/>
            <Grid Margin="0,26,0,0">
                <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1">
                    <Grid>
                        <TextBlock x:Name="Password_Watermark" Text="請輸入密碼" Foreground="Green" 
                            VerticalAlignment="Center" Padding="5" Margin="0,0,0,0"
                            IsHitTestVisible="False" Visibility="Visible" />
                        <PasswordBox x:Name="Password" Background="Transparent" BorderThickness="0"
                             VerticalAlignment="Center" Padding="5" Width="120" Height="40"
                             PasswordChanged="Password_PasswordChanged"
                             GotFocus="Password_GotFocus" LostFocus="Password_LostFocus"
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <TextBox x:Name="PasswordText" Style="{StaticResource BaseTextBox}" VerticalAlignment="Top" Width="120" Height="40" Margin="0,0,0,0" IsReadOnly="True" Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <Button x:Name="PasswordEye" Click="Main_Btn_Click" 
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="30" Height="30"
                     Background="Transparent" BorderBrush="Transparent" Margin="92,0,0,6">
                    <Image Source="/Icon/Account/eye.png" Width="20" Height="20"/>
                </Button>
            </Grid>
            <Image HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="38" Source="/Icon/Account/prohibited.png" Margin="45,26,0,0"/>
            <Grid Margin="0,26,0,0">
                <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1">
                    <Grid>
                        <TextBlock x:Name="Captcha_Watermark" Text="請輸入驗證碼" Foreground="Green" 
                            VerticalAlignment="Center" Padding="5" Margin="0,0,0,0"
                            IsHitTestVisible="False" Visibility="Visible" />
                        <PasswordBox x:Name="Captcha" Background="Transparent" BorderThickness="0"
                            VerticalAlignment="Center" Padding="5" Width="120" Height="40"
                            PasswordChanged="Captcha_PasswordChanged"
                            GotFocus="Captcha_GotFocus" LostFocus="Captcha_LostFocus"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <TextBox x:Name="CaptchaPasswordText" Style="{StaticResource BaseTextBox}" VerticalAlignment="Top" Width="120" Height="40" Margin="0,0,0,0" IsReadOnly="True" Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <Button x:Name="CaptchaEye" Click="Main_Btn_Click" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Width="30" Height="30"
                    Background="Transparent" BorderBrush="Transparent">
                    <Image Source="/Icon/Account/eye.png" Width="20" Height="20"/>
                </Button>
            </Grid>
        </WrapPanel>
        <Button x:Name="SignUp" Style="{StaticResource CircleButton}" Margin="43,248,163,42" Content="註冊" FontSize="18" Click="Main_Btn_Click"/>
        <Button x:Name="Revoke" Style="{StaticResource CircleButton}" Margin="167,248,38,42" Content="撤銷" FontSize="18" Click="Main_Btn_Click"/>
    </Grid>
</Window>
